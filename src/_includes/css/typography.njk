html {
  font-family: ui-monospace,
               "SF Mono",
               Menlo,
               Monaco,
               "Roboto Mono",
               Consolas,
               "Liberation Mono",
               "DejaVu Sans Mono",
               monospace;
  font-size: 16px;
}

@media (max-width: 600px) {
  html {
    font-size: 14.5px;
  }
}

main {
  margin: 0 auto;
  max-width: 700px;
  padding-block-start: 2em;
}

footer {
  margin: 0 auto;
  max-width: 700px;
  padding-block-start: 1em;
}

a, p {
  line-height: 1.5;
}

p {
  margin-block-start: 2em;
  margin-block-end: 2em;
}

h1 {
  margin-block-start: 1.3em;
}

h2 {
  margin-block-start: 1.83em;
}

ul {
  line-height: 1.7em;
  padding-inline-start: 1em;
}

pre {
  font-size: 0.8em;
  overflow: auto;
}

@media (prefers-color-scheme: light) {
  html {
    background-color: #f0eff5;
    color: #231d61;
    color-scheme: light;
  }

  a, pre {
    color: #124cf3;
  }

  a:hover {
    color: #577cee;
  }

  hr {
    border: .5px solid #231d61;
  }
}

@media (prefers-color-scheme: dark) {
  html {
    background-color: #292c3b;
    color: #d5d8e7;
    color-scheme: dark;
  }

  a, pre {
    color: #4fbcff;
  }

  a:hover {
    color: White;
  }

  hr {
    border: .5px solid #e4f6fc;
  }
}
